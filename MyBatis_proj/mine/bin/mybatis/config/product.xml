<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org// DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <!-- vs code 확장 프로그램 XML (XML Language Support by Red Hat) 설치해야 자동 완성한다. Release version 말고 test version으로 해야 한다. -->
<mapper namespace="tblproduct">
    <!-- 1. VO 클래스 만들기 / 2. 설정 파일에 mapper와 typealiases 추가하기 -->
     <!-- 기존의 TblProductDao의 SQL을 여기에서 작성해서 새로운 DAO 만들거라. -->
    <!-- <select id="selectAll" parameterType="java.lang.String" resultType="mybatis.vo.Productvo">

    </select> -->
     <!-- 전체 조회 -->
  <select id="selectAll" resultType="ProductVo">
    SELECT * FROM tbl_product
  </select>

  <!-- 상품 한 건 조회 -->
  <select id="selectByPcode" parameterType="String" resultType="ProductVo">
    SELECT * FROM tbl_product WHERE pcode = #{pcode}
  </select>

  <!-- 상품 등록 -->
<insert id="insert" parameterType="ProductVo">
  INSERT INTO tbl_product (pcode, pname, price, maker, category)
  VALUES (#{pcode}, #{pname}, #{price}, #{maker}, #{category})
</insert>


  <!-- 상품 삭제 -->
  <delete id="delete" parameterType="String">
    DELETE FROM tbl_product WHERE pcode = #{pcode}
  </delete>

</mapper>
